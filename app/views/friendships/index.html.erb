<div class="container1">
  <h1>Friends</h1>
</div>

<% if @friendships.length != 0 %>
  <div class="cards">
    <% @friendships.each do |friendship| %>
      <% friend = friendship.friend(current_user) %>
      <%= link_to user_path(friend), class: "card-product-link" do %>
        <div class="card-product">
          <% if friend.photo.present? %>
              <%= cl_image_tag(friend.photo.key, id: "profile") %>
          <% else %>
            <img src="https://kitt.lewagon.com/placeholder/users/cveneziani" class="avatar-bordered" />
          <% end %>
          <div class="card-product-infos">
            <h2><%= friend.first_name %> <%= friend.last_name %></h2>
            <p><%= friend.running_level %> Runner</p>
            <p><%= friend.state %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <% else %>
    <p>You have no friends yet</p>
<% end %>
